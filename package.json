{
  "name": "@ubiquity-os/daemon-merging",
  "version": "2.1.0",
  "description": "Conditionally merge pull requests after a timeout.",
  "author": "Ubiquity DAO",
  "license": "MIT",
  "main": "src/action.ts",
  "engines": {
    "node": ">=24.11.1"
  },
  "scripts": {
    "format": "run-p format:*",
    "format:lint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format:cspell": "cspell **/*",
    "knip": "knip --config .github/knip.ts",
    "knip-ci": "knip --no-exit-code --reporter json --config .github/knip.ts",
    "prepare": "husky install",
    "start": "bun --port 4000 --watch --no-clear-screen src/worker.ts",
    "start:deno": "deno serve --unstable-sloppy-imports --allow-all --unstable-kv --watch --no-clear-screen --port 4000 src/worker.ts",
    "test": "jest --setupFiles dotenv/config --coverage",
    "test:ci": "jest --setupFiles dotenv/config --config CI/jest.config.ts --coverage",
    "test:all": "run-s test test:ci"
  },
  "keywords": [
    "typescript",
    "template",
    "dao",
    "ubiquity",
    "open-source"
  ],
  "type": "module",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@octokit/auth-app": "^8.1.2",
    "@octokit/plugin-rest-endpoint-methods": "^17.0.0",
    "@octokit/rest": "^22.0.1",
    "@sinclair/typebox": "0.34.8",
    "@ubiquity-os/plugin-sdk": "^3.8.4",
    "@ubiquity-os/ubiquity-os-logger": "1.4.0",
    "dotenv": "16.4.5",
    "ms": "2.1.3",
    "ts-retry": "4.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@cspell/dict-node": "^5.0.5",
    "@cspell/dict-software-terms": "^4.1.15",
    "@cspell/dict-typescript": "^3.1.2",
    "@eslint/js": "9.14.0",
    "@jest/globals": "29.7.0",
    "@mswjs/data": "0.16.1",
    "@swc/core": "^1.15.2",
    "@swc/jest": "^0.2.39",
    "@types/deno": "^2.3.0",
    "@types/jest": "^30.0.0",
    "@types/ms": "0.7.34",
    "@types/node": "20.14.5",
    "cspell": "8.9.0",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-check-file": "2.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-sonarjs": "1.0.3",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-md-dashboard": "0.8.0",
    "knip": "5.21.2",
    "lint-staged": "15.2.7",
    "msw": "2.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.2",
    "ts-node": "10.9.2",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.15.0"
  },
  "lint-staged": {
    "*.ts": [
      "bun prettier --write",
      "eslint --fix"
    ],
    "src/**.{ts,json}": [
      "cspell"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
